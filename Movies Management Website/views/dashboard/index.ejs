<%- include('./partials/headerLayout.ejs', {pageName: "Home Page", pathLevel: "/"}) %>

<!-- Blank Start -->
<div class="col-sm-12 col-xl-12 pt-4 px-4">
    <div class="row vh-100 bg-light rounded align-items-center justify-content-center mx-0">
        <div class="col-xl-12 text-center">
            <h3>Home Page</h3>

            <% if (msg) { %>
                <div class="alert-warning">
                    <%= msg %>
                </div>
            <% } %>

            <% if (userRole == "admin") { %>
                <a href="/dashboard/manageAccounts" class="btn btn-success py-3 px-5 me-3">
                    Manage Accounts
                </a>
            <% } %>

            <% if (userRole == "admin" || userRole == "user") { %>
                <a href="/dashboard/changePassword" class="btn btn-primary py-3 px-5 me-3">
                    Change Password
                </a>
            <% } %>

            <% if (userRole == "user") { %>
                <a href="/dashboard/userAddNewMovie" class="btn btn-success py-3 px-5 me-3">
                    Add New Movie
                </a>
            <% } %>

            <% if (userRole == "user") { %>
                <a href="/dashboard/userEditMovie" class="btn btn-warning py-3 px-5 me-3">
                    Edit My Movies
                </a>
            <% } %>

            <% if (userRole == "admin") { %>
                <a href="/dashboard/suggestedMovies" class="btn btn-warning py-3 px-5 me-3">
                    Suggested Movies
                </a>
            <% } %>
            
        </div>
    </div>
</div>
<!-- Blank End -->



