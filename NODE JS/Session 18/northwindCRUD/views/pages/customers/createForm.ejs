<%- include('../../partials/siteHeader', {pageTitle: "Customers Page"}) %>
<h3>Create New Customer</h3>
<form action="./store" method="post" enctype="multipart/form-data">
    <div>
        <label for="ContactName">Contact Name</label>
        <input type="text" name="ContactName" id="ContactName" required>
    </div>
    <div>
        <label for="CompanyName">Company Name</label>
        <input type="text" name="CompanyName" id="CompanyName" required>
    </div>
    <div>
        <label for="ContactTitle">Contact Title</label>
        <input type="text" name="ContactTitle" id="ContactTitle" required>
    </div>
    <div>
        <label for="Address">Address</label>
        <input type="text" name="Address" id="Address" required>
    </div>
    <div>
        <label for="City">City</label>
        <input type="text" name="City" id="City" required>
    </div>
    <div>
        <label for="Region">Region</label>
        <input type="text" name="Region" id="Region">
    </div>
    <div>
        <label for="PostalCode">Postal Code</label>
        <input type="text" name="PostalCode" id="PostalCode" required>
    </div>
    <div>
        <label for="Country">Country</label>
        <input type="text" name="Country" id="Country" required>
    </div>
    <div>
        <label for="Phone">Phone</label>
        <input type="text" name="Phone" id="Phone" required>
    </div>
    <div>
        <label for="Fax">Fax</label>
        <input type="text" name="Fax" id="Fax">
    </div>
    <div>
        <label for="photo">photo</label>
        <input type="file" name="photo" id="photo">
    </div>
    <div>
        <input type="submit" value="Create New Customer" class="btn btn-success">
    </div>
</form>
<%- include('../../partials/siteFooter') %>