<%- include('../../partials/siteHeader', { pageTitle: "Categories", user: user }) %>

<div class="card">
    <div class="card-header">
        <h2 class="card-title">Categories Management</h2>
        <a href="/categories/create" class="btn btn-primary">+ Add New Category</a>
    </div>
    
    <% if (typeof categories !== 'undefined' && categories.length > 0) { %>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Created At</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% categories.forEach((category) => { %>
                        <tr>
                            <td><%= category.categoryName %></td>
                            <td><%= new Date(category.createdAt).toLocaleDateString() %></td>
                            <td>
                                <span class="status-badge <%= category.isActive ? 'status-completed' : 'status-pending' %>">
                                    <%= category.isActive ? 'Active' : 'Inactive' %>
                                </span>
                            </td>
                            <td>
                                <a href="/categories/<%= category.id %>" class="btn btn-secondary">View</a>
                                <a href="/categories/<%= category.id %>/edit" class="btn btn-primary">Edit</a>
                                <button onclick="deleteCategory('<%= category.id %>')" class="btn btn-danger">Delete</button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <div class="empty-state">
            <div class="empty-state-icon">ðŸ“‚</div>
            <h3 class="empty-state-title">No Categories Found</h3>
            <p class="empty-state-description">Get started by creating your first category.</p>
            <a href="/categories/create" class="btn btn-primary">Create First Category</a>
        </div>
    <% } %>
</div>

<script>
    function deleteCategory(categoryId) {
        if (confirm("Are you sure you want to delete this category? This action cannot be undone.")) {
            window.location.href = "/categories/" + categoryId + "/delete";
        }
    }
</script>

<%- include('../../partials/siteFooter') %>
