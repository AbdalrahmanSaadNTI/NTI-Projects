<%- include('../../partials/siteHeader', { pageTitle: pageTitle || 'Sign In', user: null }) %>

<div class="auth-container">
    <div class="auth-card">
        <h2 class="auth-title">Welcome Back</h2>
        <p style="text-align: center; color: #718096; margin-bottom: 2rem;">Sign in to your account</p>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-error"><%= error %></div>
        <% } %>
        
        <form method="post" action="/auth/signin">
            <div class="form-group">
                <label class="form-label">Username</label>
                <input type="text" name="userName" class="form-input" required placeholder="Enter your username">
            </div>
            
            <div class="form-group">
                <label class="form-label">Password</label>
                <input type="password" name="password" class="form-input" required placeholder="Enter your password">
            </div>
            
            <button type="submit" class="btn btn-primary" style="width: 100%; margin-bottom: 1rem;">Sign In</button>
            
            <div style="text-align: center;">
                <p style="color: #718096;">Don't have an account? <a href="/auth/signup" style="color: #667eea; text-decoration: none;">Sign up</a></p>
            </div>
        </form>
    </div>
</div>

<%- include('../../partials/siteFooter') %>


